{
    "require": {
        "phpmailer/phpmailer": "^6.9",
        "vlucas/phpdotenv": "^5.6",
        "mongodb/mongodb": "^1.20",
        "cloudinary/cloudinary_php": "^2.14",
        "php": "^8.2",
        "ext-pdo": "*"
    },

    "autoload": {
        "psr-4": {
            "App\\": ""
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "require-dev": {
        "phpunit/phpunit": "^11.4"
    },

    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.0"
        }
    }
}